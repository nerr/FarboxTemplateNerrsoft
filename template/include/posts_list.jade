for post in posts
    .post
        h2.post_title
            a(href=post.url)= post.title

        ul.entry-meta.clearfix
            li.date
                strong Posted:&nbsp;
                time(datetime="{{post.date.format('%Y-%m-%d')}}") {{post.date.format('%Y-%m-%d %H:%M')}}
            li.author
                span /&nbsp;
                strong By:&nbsp;
                span {{site.configs.site_author}}
            li.visits
                span /&nbsp;
                strong Visits:&nbsp;
                span {{post.visits}}

        .entry-content
            if post.cover != none
                a.entry-thumbnail(href=post.url)
                    img(src=post.cover)
            .post-intro= post.content.limit(240).no_pic
            a.nerr-read-more(href=post.url)
                i.fa.fa-ellipsis-h.fa-2x
        .tags
            strong Tagged:&nbsp;
            for tag in post.tags
                a.tag(href="/tag/{{tag}}")= tag
        hr

include include/paginator